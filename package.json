{
  "name": "hexo-renderers-site",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "npm run server",
    "build": "clear && hexo generate --debug",
    "clean": "clear && hexo clean",
    "clean:post": "rimraf source/_posts source/page/random && git restore source/_posts",
    "server": "clear && hexo server -p 4000 --debug --ssl",
    "serve-static": "php -S localhost:4000 -t public/",
    "update:ncu": "npm-check-updates -u",
    "random-post": "node random-post.cjs",
    "postinstall": "node _config.loader.cjs && hexo-theme-flowbite",
    "post:copy": "node init-source-posts.cjs && npm run clean && sbg post copy",
    "render-cache": "clear && hexo render-cache --debug"
  },
  "hexo": {
    "version": "7.3.0"
  },
  "workspaces": [
    "themes/*"
  ],
  "dependencies": {
    "fs-extra": "^11.2.0",
    "hexo": "^7.3.0",
    "hexo-asset-link": "^2.2.3",
    "hexo-cli": "^4.3.2",
    "hexo-front-matter": "^4.2.1",
    "hexo-generator-category": "^2.0.0",
    "hexo-generator-tag": "^2.0.0",
    "hexo-log": "^4.1.0",
    "hexo-renderers": "workspace:^",
    "hexo-seo": "^1.4.3",
    "hexo-server": "^3.0.0",
    "hexo-shortcodes": "^1.2.3",
    "hexo-util": "^3.3.0",
    "material-components-web": "^14.0.0",
    "static-blog-generator": "*",
    "upath": "^2.0.1",
    "warehouse": "^5.0.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "binary-collections": "^2.0.6",
    "cross-env": "^7.0.3",
    "cross-spawn": "https://github.com/dimaslanjaka/node-cross-spawn/raw/5560156/release/cross-spawn.tgz",
    "hexo-theme-flowbite": "*",
    "js-yaml": "^4.1.0",
    "moment": "^2.30.1",
    "prompt": "^1.3.0",
    "rimraf": "^6.0.1",
    "yaml": "^2.6.0"
  },
  "description": "page builder for `hexo-renderers`",
  "main": "random-post.js",
  "keywords": [],
  "author": "",
  "license": "ISC"
}
