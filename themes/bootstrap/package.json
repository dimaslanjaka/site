{
  "name": "hexo-theme-bootstrap",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "files": [
    "layout",
    "source",
    "scripts"
  ],
  "scripts": {
    "build": "npm-run-all --series css js",
    "css-compile": "node-sass --include-path node_modules --output-style compressed --source-map true --source-map-contents true --precision 6 src/css -o source/bootstrap/css/",
    "css-lint": "stylelint src/css/",
    "css-prefix": "postcss --replace source/bootstrap/css/bootstrap.css --use autoprefixer --map",
    "css-purge": "purgecss --keyframes --css source/bootstrap/css/bootstrap.css --content layout/**/*.ejs \"node_modules/bootstrap/js/dist/{util,modal}.js\" --output source/bootstrap/css/",
    "css": "npm-run-all css-compile css-prefix",
    "js": "rollup -c"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@popperjs/core": "^2.11.6",
    "@rollup/plugin-multi-entry": "^4.1.0",
    "@rollup/plugin-terser": "^0.4.0",
    "autoprefixer": "^10.4.0",
    "bootstrap": "^5.2.3",
    "cross-env": "^7.0.3",
    "node-sass": "^8.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.21",
    "postcss-cli": "^10.1.0",
    "purgecss": "^5.0.0",
    "rollup": "^2.79.1",
    "rollup-plugin-node-resolve": "^5.2.0"
  }
}