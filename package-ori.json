{
  "name": "hexo-renderers-site",
  "version": "0.0.0",
  "private": true,
  "hexo": {
    "version": "7.3.0"
  },
  "scripts": {
    "start": "clear && hexo server",
    "build": "clear && hexo generate",
    "clean": "clear && hexo clean && rimraf tmp",
    "clean:post": "rimraf source/_posts source/page/random && git restore source/_posts",
    "random-post": "node random-post.cjs",
    "postinstall": "node _config.loader.cjs && npx hexo-theme-flowbite",
    "post:copy": "node init-source-posts.cjs && npm run clean && npm run clean:post && sbg post copy"
  },
  "workspaces": [
    "themes/*"
  ],
  "dependencies": {
    "cheerio": "^0.22.0",
    "hexo": "^7.3.0",
    "hexo-clean-css": "^2.0.0",
    "hexo-filter-nofollow": "^2.0.2",
    "hexo-fs": "^4.1.1",
    "hexo-generator-archive": "^2.0.0",
    "hexo-generator-feed": "^3.0.0",
    "hexo-generator-sitemap": "^3.0.1",
    "hexo-renderer-marked": "^6.3.0",
    "hexo-renderer-stylus": "^3.0.1",
    "hexo-server": "^3.0.0",
    "hexo-shortcodes": "^1.2.3",
    "hexo-uglify": "^2.0.0",
    "lunr": "2.3.9",
    "sbg-cli": "^1.1.0",
    "sharp": "^0.33.1"
  },
  "devDependencies": {
    "eslint": "^8.0.1",
    "eslint-config-hexo": "^5.0.0",
    "hexo-theme-flowbite": "*",
    "husky": "^9.0.6",
    "imagemin-lint-staged": "^0.5.1",
    "lint-staged": "^15.2.0",
    "prettier": "3.3.3"
  },
  "engines": {
    "node": ">=14"
  }
}
